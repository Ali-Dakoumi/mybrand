extends layout

block content

  div(data-template='products')#content.content
    div.products
      .products__wrapper
        div.products__content
            ul.products__grid
              each product in products
                li
                  a(href=`product/${product.id}`)
                    .product__image__wrapper
                      img(data-src=product.image alt=product.title)
                    .product__title__price
                      p= product.title
                      p= product.price